    "sources": "https://github.com/A5b84/status-effect-bars"
  },

  "license": "LGPL-3.0-or-later",
  "icon": "assets/status-effect-bars/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": ["io.github.a5b84.statuseffectbars.StatusEffectBars"],
    "modmenu": ["io.github.a5b84.statuseffectbars.config.ModMenuIntegration"]
  },
  "mixins": ["status-effect-bars.mixins.json"],

  "depends": {
    "minecraft": "1.17.x",
    "fabricloader": ">=0.13.3",
    "cloth-config2": ">=4.9.0"
